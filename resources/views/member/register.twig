{% extends 'templates/front.twig' %}
{% block content %}
<div class="breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <ul>
            <li class="home"> <a title="Go to Home Page" href="{{ path_for('home') }}">Home</a><span>&raquo;</span></li>
            <li><strong>Daftar</strong></li>
          </ul>
        </div>
      </div>
    </div>
</div>
<section class="main-container col1-layout">
    <div class="main container">
      
        
        <div class="page-content">
          
            <div class="account-login">
              
   
          
              <div class="box-authentication">
                <h4>Daftar akun</h4><p>Daftar sekarang dan rasakan keuntungannya</p>
                <label for="nama_register">Nama<span class="required">*</span></label>
                <input id="nama_register" type="text" class="form-control">                      
