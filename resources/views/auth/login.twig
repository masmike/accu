<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Q.Informatics - System Login</title>

    <meta http-equiv="X-UA-Compatible" content=="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/fonts/line-awesome/css/line-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/fonts/montserrat/styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/tether.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/common.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/auth.css') }}">
</head>
<body>
<div class="ks-page">
    <!--<div class="ks-header">
        <a href="#" class="ks-logo">KOSMO</a>
    </div> -->
    <div class="ks-body">
        <!--<div class="ks-logo">KOSMO</div>-->
        {% include 'templates/partials/alerts.twig'%}
        <div class="card panel panel-default ks-light ks-panel">
            <div class="card-block">
                <form class="form-container" action="{{ path_for('auth.login') }}" method="post">
                    <h4 class="ks-header">Login</h4>
                    <div class="ks-text-center" style="height: 40px;"></div>
                    <div class="form-group {{ errors.has('username') ? ' has-danger' : '' }}">
                        <div class="input-icon icon-left icon-lg icon-color-primary">
                            <input type="text" class="form-control{{ errors.has('username') ? ' form-control-danger' : '' }}" placeholder="Username" name="username" value="{{ old.username }}" id="username" autofocus>
                            <span class="icon-addon">
                                <span class="la la-user"></span>
                            </span>
                        </div>
                        {% if errors.has('username') %}
                            <div class="form-control-feedback" style="font-size: 9px;">{{ errors.first('username') }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.has('password') ? ' has-danger' : '' }}">
                        <div class="input-icon icon-left icon-lg icon-color-primary">
                            <input type="password" class="form-control{{ errors.has('password') ? ' form-control-danger' : '' }}" placeholder="Password" name="password" id="password">
                            <span class="icon-addon">
                                <span class="la la-key"></span>
                            </span>      
                        </div>
                        {% if errors.has('password') %}
                            <div class="form-control-feedback" style="font-size: 9px;">{{ errors.first('password') }}</div>
                        {% endif %}
                    </div>
                    <div class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" name="remember">
                                    Selalu ingat
                                </label>
                            </div>
                    <div class="ks-text-center" style="height: 30px;"></div>
                    <div class="form-group">
                        {{ csrf.field | raw }}
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                    <div class="ks-text-center" style="height: 60px;"></div>
                    <div class="ks-text-center">
                        <a href="{{ path_for('auth.password.forgot') }}">Lupa password?</a>
                    </div>

                    <!--<div class="ks-social">
                        <div>or Log In with social</div>
                        <div>
                            <a href="#" class="facebook fa fa-facebook"></a>
                            <a href="#" class="twitter fa fa-twitter"></a>
                            <a href="#" class="google fa fa-google"></a>
                        </div>
                    </div>-->
                </form>
            </div>
        </div>


    </div>
    
    <div class="ks-footer">
        <span class="ks-copyright">&copy; 2017 Q.Informatics - v1.0</span>
        
    </div>
</div>
<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('js/tether.min.js') }}"></script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
</body>
</html>